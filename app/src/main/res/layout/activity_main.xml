<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/num1"
        android:layout_width="220dp"
        android:layout_height="103dp"
        android:hint="num1"
        android:textSize="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="215dp"
        android:layout_height="129dp"
        android:hint="num2"
        android:textSize="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302" />

    <TextView
        android:id="@+id/det"
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="86dp"
        android:text="detalis"
        android:textSize="45dp"
        app:layout_constraintBottom_toTopOf="@+id/res"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num2" />

    <Button
        android:id="@+id/res"
        android:layout_width="224dp"
        android:layout_height="82dp"
        android:layout_marginTop="372dp"
        android:onClick="res"
        android:text="result"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="68dp" />

    <Button
        android:id="@+id/min"
        android:layout_width="114dp"
        android:layout_height="67dp"
        android:layout_marginStart="4dp"
        android:onClick="countmin"
        android:text="-"
        android:textSize="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/res" />

    <Button
        android:id="@+id/plus"
        android:layout_width="115dp"
        android:layout_height="67dp"
        android:layout_marginStart="308dp"
        android:layout_marginTop="64dp"
        android:onClick="countplus"
        android:text="+"
        android:textSize="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/det" />

    <Button
        android:id="@+id/x"
        android:layout_width="114dp"
        android:layout_height="67dp"
        android:layout_marginEnd="188dp"
        android:onClick="mult"
        android:text="*"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/res" />

    <Button
        android:id="@+id/div"
        android:layout_width="114dp"
        android:layout_height="67dp"
        android:layout_marginEnd="84dp"
        android:onClick="d"
        android:text="/"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/res" />

</androidx.constraintlayout.widget.ConstraintLayout>